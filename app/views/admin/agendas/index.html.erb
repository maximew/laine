<div class="jumbotron text-center">
  <h1 class="text-center">Agenda</h1>

  <%= render 'admin/links' %>

  <hr>

  <%= link_to 'Nouvelle note', new_admin_agenda_path, class: 'btn btn-lg btn-success center-block' %>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Titre</th>
        <th>Contenu</th>
        <th>Date de d√©but</th>
        <th>Date de fin</th>
        <th>Modifier</th>
        <th>Supprimer</th>
      </tr>
    </thead>
    <tbody>
      <% @agendas.each do |agenda| %>
        <tr>
          <td><%= agenda.title %></td>
          <td><%= agenda.content.html_safe %></td>
          <td><%= agenda.startdate %></td>
          <td><%= agenda.enddate %>.</td>
          <td><%= link_to 'Modifier', edit_admin_agenda_path(agenda), class: 'btn btn-default' %></td>
          <td><%= link_to 'Supprimer', admin_agenda_path(agenda), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>