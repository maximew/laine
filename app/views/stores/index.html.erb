<h1 class="text-center">Stores</h1>

<section class="row pager">
    <%= link_to 'Toutes', fetch_stores_items_path(:categ => nil), :remote => true, :class => 'btn btn-xs btn-gray' %>
    <% @categories.each do |category| %>
      <%= link_to category.libelle, fetch_stores_items_path(:categ => category.id), :remote => true, :class => 'btn btn-xs btn-gray' %>
    <% end %>
</section>

<hr>

<div id="stores" class="transitions-enabled infinite-scroll clearfix centered content">
  <%= render partial: 'stores', locals: { stores: @stores} %>
</div>